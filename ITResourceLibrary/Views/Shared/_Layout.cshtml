    <script>
        check_change = function (e) {
            if ($(e).is(':checked')) {
                $(e).val('Visible')
            } else {$(e).val('Invisible')}

        }
        $(function () {
            $('#body').css("height", document.documentElement.clientHeight);
            $('#Count').html(@Html.Action("CodeCount","Kind"));
            var UserName ='@Html.Action("GetUserName", "Shared")';
            if (UserName != "沙俊" && UserName != "沙杰") {
                $('#check_div').attr("hidden", "hidden")
            }
        });
        Exit = function () {
            window.location.href='@Url.Action("Index","login")'
        }
    </script>
</body>
</html>