<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IT资源库</title>
    <link href="~/Content/Loading.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/bootstrap")
    <script src="~/Frame/bootstrap/js/bootstrap-treeview.js"></script>
</head>
<body id="body">

    <div style="height:50px;width:100%;background-color:darkslategray;line-height:8%">
        <div style="width:1280px;height:100%;padding:2px;">
            <img style="margin-left:0.5%; height:100%;float:left" src="~/Content/ico/head-logo.jpg" />
            <div style="float:left;width:8%;color:white;line-height:50px;height:100%;text-align:center">当前登陆:</div> 
            <div style="float:left;color:white;cursor:pointer;line-height:50px;height:100%;width:4%;" id="user" onclick="Exit()">@Html.Action("GetUserName", "Shared")</div>
            <div style="color:lightblue;font-size:larger;width:4.7%;line-height:50px;height:100%;float:left;text-align:center;">总条目</div>
            <div style="width:4%;background-color:chocolate; color:aliceblue;border-radius:3px;float:left;height:60%;margin-top:0.8%;text-align:center;line-height:30px;font-size:17px;">@Html.Action("CodeCount","Shared")</div>
            <input class="form-control" style="float:left; width:20%; border:none;background-color:darkslategray;color:chartreuse;text-align:center;margin-top:0.6%;margin-left:1%;"id="kind"  placeholder="分类名称" />
            <input class="form-control" style="float:left; width:38%; border:none;background-color:darkslategray;color:chartreuse;text-align:center;margin-top:0.6%;margin-left:1%;font-size:17px;" id="title" placeholder="代码标题" />
            <div id="author" style="color:bisque;float:left;height:65%;width:8%;margin-top:0.8%;text-align:center;line-height:30px;border-radius:3px;"></div>
            <input type="checkbox"id="check" name="status" onchange="check_change(this)" checked style="margin-top:1.5%;" />
        </div>
    </div>
    <div class="content" style="height:93%;">
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)

    <script>
        check_change = function (e) {
            if ($(e).is(':checked')) {
                $(e).val('Visible')
            } else {$(e).val('Invisible')}

        }
        $(function () {
            $('#check').val('Visible')
            $('#body').css("height", document.documentElement.clientHeight);
            var UserName ='@Html.Action("GetUserName", "Shared")';
            if (UserName != "沙俊" && UserName != "沙杰") {
                $('#check').css("display","none")
            }
        });
        Exit = function () {
            window.location.href='@Url.Action("Index","login")'
        }
    </script>
</body>
</html>